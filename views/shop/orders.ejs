</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <h1>Orders</h1>
    <% if (orders.length > 0) { %>
      <ul>
        <% orders.forEach((order) => { %>
          <li>
            <h1>#<%= order.id %></h1>
            <ul>
              <% order.products.forEach((product) => { %>
                <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <h2>No orders found</h2>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>
